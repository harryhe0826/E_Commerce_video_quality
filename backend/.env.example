# 应用配置
APP_NAME="Video Quality Analyzer"
DEBUG=True
LOG_LEVEL=INFO

# 路径配置
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# ============================================
# AI 平台配置
# ============================================
# 选择默认的 AI 平台 (claude, aihubmix, openai)
AI_PLATFORM=claude

# Claude (Anthropic) API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Aihubmix (第三方大模型聚合平台)
# 官网: https://aihubmix.com
AIHUBMIX_API_KEY=your_aihubmix_api_key_here
AIHUBMIX_BASE_URL=https://aihubmix.com/v1
AIHUBMIX_MODEL=gpt-4o
# 可选模型: gpt-4o, claude-3-5-sonnet-20241022, gemini-pro, deepseek-chat, qwen-max 等

# OpenAI (如果直接使用 OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# 数据库
DATABASE_URL=sqlite:///./video_quality.db

# ============================================
# Cloudflare R2 对象存储配置
# ============================================
# 是否启用 R2 存储（生产环境建议设置为 True）
USE_R2_STORAGE=False

# R2 Account ID (在 Cloudflare Dashboard 中找到)
R2_ACCOUNT_ID=your_account_id_here

# R2 访问密钥（在 R2 -> Manage R2 API Tokens 中创建）
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here

# R2 Bucket 名称（需要先创建 bucket）
R2_BUCKET_NAME=video-quality-uploads

# R2 公共访问域名（可选，如果配置了 custom domain）
# 如果不配置，将使用 R2 默认域名
R2_PUBLIC_URL=

# 服务器
HOST=0.0.0.0
PORT=8000

# 前端
FRONTEND_URL=http://localhost:5173

# 视频处理配置
MAX_VIDEO_SIZE_MB=100
SUPPORTED_FORMATS=mp4,mov,avi

# 模型配置（可选）
WHISPER_MODEL=base  # tiny, base, small, medium, large
YOLO_MODEL=yolov8n.pt
